@using System
@using UserManagement.Api.Modules
@using UserManagement.Api.ViewModels
@using UserManagement.Domain.Dtos
@*@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<LookupViewModel>*@

@Html.Partial("Shared/PageHeading", new PageHeadingViewModel("Contracts", ""))

<table id="users_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
</table>

<script>
    var table = $("#users_table").DataTable({
        dom: '<"table-toolbar">frtip',
        retrieve: true,
        ajax: "/Contracts",
        columns: [
            { data: "id", visible: false },
            { data: "name" },
            { data: "description" },
            {
                data: null,
                render: function(data, type, full, meta) {
                    return '<a class="btn btn-primary entity-edit" href="#/Contracts/' + data.id + '">Edit</a>';
                }
            }
        ]
    });

    $("div.table-toolbar").html("<a class='btn btn-default entity-add' href='#/Contracts/Add'>Add</a>");
</script>
