@using System
@using System.Linq
@using UserManagement.Api.Helpers.NancyRazorHelpers
@*@using Nancy.ViewEngines.Razor.HtmlHelpers;*@
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<UserManagement.Domain.Dtos.CustomerDto>

<div id="customerView" class="box dark">
    <header>
        <div class="icons">
            <i class="fa fa-edit"></i>
        </div>
        <h5>Customer Info</h5>
        <div class="toolbar">
            <nav style="padding: 8px;">
                <a class="btn btn-default btn-xs collapse-box" href="javascript:;">
                    <i class="fa fa-minus"></i>
                </a>
            </nav>
        </div>
    </header>

    <div class="body collapse in row" id="div-1" aria-expanded="true" style="">
        <div class="form-group">

            <label class="control-label col-lg-4">Name</label>
            <div class="input-group col-lg-2">
                <span class="input-group-addon glyphicon glyphicon-pencil" id="basic-addon1"></span>
                <div aria-describedby="basic-addon1">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "" })
                </div>
            </div>
            <div class="col-lg-6">
                @Html.ValidationMessageFor(x => x.Name)
            </div>

        </div>
        <div class="form-group">

            <label class="control-label col-lg-4">Account Owner Name</label>
            <div class="input-group col-lg-2">
                <span class="input-group-addon glyphicon glyphicon-pencil" id="basic-addon1"></span>
                <div aria-describedby="basic-addon1">
                    @Html.TextBoxFor(x => x.AccountOwnerName, new { @class = "form-control", placeholder = "" })
                </div>
            </div>
            <div class="col-lg-6">
                @Html.ValidationMessageFor(x => x.AccountOwnerName)
            </div>

        </div>
        <div class="form-group">

            <label class="control-label col-lg-4">Commercial State</label>
            <div class="input-group col-lg-2">
                <select name="CommercialStateId" data-placeholder="Choose a state..." class="chosen-select">
                    <option value=""></option>
                    @foreach (SelectListItem item in ViewBag.CommercialStates.Value)
                    {
                        var isSelected = item.Value == Model.CommercialStateId.ToString();
                        <option selected="@isSelected" value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-lg-6">
                @Html.ValidationMessageFor(x => x.CommercialStateId)
            </div>

        </div>
        <div class="form-group">

            <label class="control-label col-lg-4">Create Sources</label>
            <div class="input-group col-lg-2">
                <select name="CreateSourceIds" data-placeholder="Search for source..." multiple class="chosen-select">
                    <option value=""></option>
                    @foreach (SelectListItem item in ViewBag.CreateSources.Value)
                    {
                        var isSelected = Model.CreateSourceIds != null && Model.CreateSourceIds.Contains(new Guid(item.Value));
                        <option selected="@isSelected" value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-lg-6">
                @Html.ValidationMessageFor(x => x.CreateSourceIds)
            </div>

        </div>
        <div class="form-group">

            <label class="control-label col-lg-4">Platform Status</label>
            <div class="input-group col-lg-2">
                <select name="PlatformStatusId" data-placeholder="Choose a province..." class="chosen-select">
                    <option value=""></option>
                    @foreach (SelectListItem item in ViewBag.PlatformStatuss.Value)
                    {
                        var isSelected = item.Value == Model.PlatformStatusId.ToString();
                        <option selected="@isSelected" value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-lg-6">
                @Html.ValidationMessageFor(x => x.PlatformStatusId)
            </div>

        </div>
        <div class="form-group">
            <div class="col-lg-4"></div>
            <div class="col-lg-3">
                <input type="submit" class="btn btn-primary" value="Save">
            </div>
        </div>
    </div>
</div>