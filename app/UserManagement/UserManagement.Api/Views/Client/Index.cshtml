@using System
@using UserManagement.Api.Modules
@using UserManagement.Api.ViewModels
@using UserManagement.Domain.Dtos

@Html.Partial("Shared/PageHeading", new PageHeadingViewModel("Clients", ""))

<table id="client_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
</table>

<script>
    var table = $("#client_table").DataTable({
        dom: '<"table-toolbar">frtip',
        retrieve: true,
        ajax: "/Clients",
        columns: [
            { data: "id", visible: false },
            { data: "name" },
            {
                data: null,
                render: function(data, type, full, meta) {
                    return '<a class="btn btn-primary entity-edit" href="#/Clients/' + data.id + '">Edit</a>';
                }
            }
        ]
    });

    $("div.table-toolbar").html("<a class='btn btn-default entity-add' href='#/Clients/Add'>Add</a>");
</script>
