<log4net>
  <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="ERROR" />
      <forecolor value="Red" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <forecolor value="Cyan" />
    </mapping>
    <mapping>
      <level value="INFO" />
      <forecolor value="Green" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionpattern value="%date [%thread] %-5level - %message%newline" />
    </layout>
  </appender>

  <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
    <file value=".\logs\" />
    <staticLogFileName value="false" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
      
    <datePattern value=".yyyy-MM-dd-tt&quot;.log&quot;" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="50000KB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level %message%newline" />
    </layout>
    
  </appender>
  
  <appender name="ErrorLog" type="log4net.Appender.RollingFileAppender">
    <file value=".\logs\errors\" />
    <staticLogFileName value="false" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
      
    <datePattern value=".yyyy-MM-dd-tt&quot;.log&quot;" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="50000KB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
      <levelMax value="FATAL" />
    </filter>
  </appender>

  <appender name="WarningsLog" type="log4net.Appender.RollingFileAppender">
    <file value=".\logs\warnings\" />
    <staticLogFileName value="false" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />

    <datePattern value=".yyyy-MM-dd-tt&quot;.log&quot;" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="50000KB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="WARN" />
      <levelMax value="WARN" />
    </filter>
  </appender>
  
  <logger name="NHibernate">
    <level value="ERROR" />
  </logger>

  <logger name="NHibernate.SQL">
    <level value="ERROR" />
  </logger>

  <!--<appender name="EventLogAppender" type="log4net.Appender.EventLogAppender" >
    <applicationName value="DealView TenderAndExchange" />
