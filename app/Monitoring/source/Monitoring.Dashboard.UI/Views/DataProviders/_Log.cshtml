<div class="data-provider-log" ng-app="dataProviderMonitoringApp" ng-controller="DataProviderController">
    <div>
        <input type="button" id="re-initialize-log-data" value="Refresh" ng-click="ReInitializeService" />
    </div>
    <div id="data-provider-event-log" class="data-provider-container">
        <ul>
            <li ng-repeat="response in dataProviderMonitoring" class="" ng-class="{'hasErrorsClass':response.HasErrors, 'hasNoErrorsClass' : !response.HasErrors}">
                <h2 ng-click="Toggle($index,'log-formatted-json');">&nbsp;{{response.Metadata}}&nbsp;{{response.PeformanceData}}</h2>
                <div>
                    <div style="display: none;" id="toggle-{{$index}}">
                        <textarea style="display: none" id="rawJson-{{$index}}" class="rawJson">{{response.Payload}}</textarea>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <div id="log-formatted-json" style="display: none;">
        <div>
            <input type="button" id="button-collapse-expand" ng-click="CollapseOrExpand('button-collapse-expand');" value="Collapse" />
        </div>
        <div class="canvas" id="canvas-display"><pre class="CodeContainer"></pre></div>
    </div>
</div>
<div style="clear: both"></div>


