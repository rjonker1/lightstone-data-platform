@using Newtonsoft.Json
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<System.Collections.Generic.List<Lim.Test.Api.Dto.TransactionDto>>
@{
    Layout = "_Layout.cshtml";
}
<body class="skin-red">
    <div class="wrapper">
        <div class="wrapper">
            @Html.Partial("_Header.cshtml")
            @Html.Partial("_Sidebar.cshtml")

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>
                        LIM
                        <small>Test API</small>
                    </h1>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                       
                        <div class="col-xs-12">
                            <div class="box">
                                <div class="box-header">
                                    <h3 class="box-title">Pushed Transactions</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <table id="push-transactions" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Request Id</th>
                                                <th>Package Id</th>
                                                <th>User Id</th>
                                                <th>Username</th>
                                                <th>Contract Id</th>
                                                <th>Account Number</th>
                                                <th>Report Date</th>
                                                <th>Has Response</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var report in Model)
                                            {
                                                <tr>
                                                    <td>@report.RequestId</td>
                                                    <td>@report.PackageId</td>
                                                    <td>@report.UserId</td>
                                                    <td>@report.Username</td>
                                                    <td>@report.ContractId</td>
                                                    <td>@report.AccountNumber</td>
                                                    <td>@report.ResponseDate</td>
                                                    <td>@report.HasResponse</td>
                                                    <td><textarea cols=50 rows=10 >@JsonConvert.SerializeObject(@report.Report, Formatting.Indented)</textarea></td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Request Id</th>
                                                <th>Package Id</th>
                                                <th>User Id</th>
                                                <th>Username</th>
                                                <th>Contract Id</th>
                                                <th>Account Number</th>
                                                <th>Report Date</th>
                                                <th>Report JSON</th>
                                                <th>Has Response</th>
                                                <th></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div><!-- /.box-body -->
                            </div>
                        </div>
                    </div>
                </section><!-- /.content -->
            </div><!-- /.content-wrapper -->
            @Html.Partial("_Footer.cshtml")
        </div>
    </div>
    <script src="~/assets/jquery/jquery-1.10.2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/assets/js/app.min.js" type="text/javascript"></script>
</body>