@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<System.Collections.Generic.List<Lim.Dtos.DatabaseExtractDto>>
@{
    Layout = "_Layout.cshtml";
}
<body class="skin-blue">
    <div class="wrapper">
        <div class="wrapper">
            @Html.Partial("_Header.cshtml")
            @Html.Partial("_Sidebar.cshtml")

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>
                        LIM
                        <small>Lightstone Auto Database Extracts</small>
                    </h1>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-xs-2">
                            <a class="btn btn-block btn-success" href="/database/lsauto/import/views">Import Views</a>
                        </div>
                        <div class="col-xs-12">
                            <div class="box">
                                <div class="box-header">
                                    <h3 class="box-title">Existing Configurations</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Version</th>
                                            <th>Active</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var extract in Model)
                                        {
                                            <tr>
                                                <td>@extract.Name</td>
                                                <td>@extract.Description</td>
                                                <td>@extract.Version</td>
                                                <td>@extract.Activated</td>
                                                <td><a class="btn btn-block btn-success" href="/database/lsauto/extract/edit/@extract.Id">Edit</a></td>
                                            </tr>
                                        }
                                        </tbody>
                                        <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Version</th>
                                            <th>Active</th>
                                            <th></th>
                                        </tr>
                                        </tfoot>
                                    </table>
                                </div><!-- /.box-body -->
                            </div>
                        </div>
                    </div>
                </section><!-- /.content -->
            </div><!-- /.content-wrapper -->
            @Html.Partial("_Footer.cshtml")
        </div>
    </div>
    <script src="~/assets/jquery/jquery-1.10.2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/assets/js/app.min.js" type="text/javascript"></script>
</body>