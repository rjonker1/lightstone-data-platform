@using System.Linq
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Lim.Dtos.DatabaseExtractDto>
@{
    Layout = "_Layout.cshtml";
}

<body class="skin-blue">
    <div class="wrapper">
        @Html.Partial("_Header.cshtml")
        @Html.Partial("_Sidebar.cshtml")

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    LIM
                    <small>Database Extract</small>
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="box box-warning">
                        <div class="box-header">
                            <h3 class="box-title">View Configuration</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <form role="form" action="/database/lsauto/extract/save" method="post">
                                <input type="hidden" name="Id" value="@Model.Id" />
                                <input type="hidden" name="AggregateId" value="@Model.AggregateId" />
                                <input type="hidden" name="Version" value="@Model.Version"/>
                                <input type="hidden" name="FieldCount" value="@Model.FieldCount"/>
                                <input type="hidden" name="Name" value="@Model.Name"/>
                                <input type="hidden" name="ViewId" value="@Model.ViewId" />
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label>
                                            <input name="Activated" id="Activated" checked="@Model.Activated" value="@Model.Activated" type="checkbox" />
                                            Is Active
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    <input type="text" name="Description" required maxlength="1000" class="form-control" value="@Model.Description" placeholder="..."/>
                                </div>
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Selected</th>
                                            <th>Display Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (var i = 0; i < Model.Fields.Count; i++)
                                        {
                                            var checkedId = string.Format("Fields[{0}].Selected", i);
                                            var displayId = string.Format("Fields[{0}].DisplayName", i);
                                            var name = string.Format("Fields[{0}].Name", i);
                                            var id = string.Format("Fields[{0}].Id", i);
                                           
                                            <tr>

                                                <td>
                                                    <input name="@checkedId" id="@checkedId" checked="@Model.Fields[i].Selected" value="@Model.Fields[i].Selected" type="checkbox"/>
                                                    <input type="hidden" name="@name" value="@Model.Fields[i].Name"/>
                                                    <input type="hidden" name="@id" value="@Model.Fields[i].Id" />
                                                </td>
                                                <td><input type="text" id="@displayId" name="@displayId" required maxlength="100" class="form-control" value="@Model.Fields[i].DisplayName" placeholder="..."/></td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Selected</th>
                                            <th>Display Name</th>
                                        </tr>
                                    </tfoot>
                                </table>
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div><!-- /.box-body -->
                    </div>
                </div>
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
        @Html.Partial("_Footer.cshtml")
    </div>
    <script src="~/assets/jquery/jquery-1.10.2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/input-mask/jquery.inputmask.js" type="text/javascript"></script>
    <script src="~/assets/plugins/input-mask/jquery.inputmask.date.extensions.js" type="text/javascript"></script>
    <script src="~/assets/plugins/input-mask/jquery.inputmask.extensions.js" type="text/javascript"></script>
    <script src="~/assets/plugins/daterangepicker/daterangepicker.js" type="text/javascript"></script>
    <script src="~/assets/plugins/timepicker/bootstrap-timepicker.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/chosen/chosen.jquery.min.js" type="text/javascript"></script>
    <script src="~/assets/js/app.min.js" type="text/javascript"></script>
</body>