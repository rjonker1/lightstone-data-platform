@using Newtonsoft.Json
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Lim.Web.UI.Models.Api.Metadata>
@{
    Layout = "_Layout.cshtml";
}
<body class="skin-blue">
    <div class="wrapper">
        <div class="wrapper">
            @Html.Partial("_Header.cshtml")
            @Html.Partial("_Sidebar.cshtml")

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>
                        LIM
                        <small>Package Response</small>
                    </h1>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box">
                                <div class="box-header">
                                    <h3 class="box-title">@Model.Description</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div style="width:90%;"><textarea rows="500" style="width:100%;">@JsonConvert.SerializeObject(JsonConvert.DeserializeObject(Model.ApiResponse), Formatting.Indented)</textarea></div>
                                    </div><!-- /.box-body -->
                            </div>
                        </div>
                    </div>
                </section><!-- /.content -->
            </div><!-- /.content-wrapper -->
            @Html.Partial("_Footer.cshtml")
        </div>
    </div>
    <script src="~/assets/jquery/jquery-1.10.2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/assets/js/app.min.js" type="text/javascript"></script>
</body>