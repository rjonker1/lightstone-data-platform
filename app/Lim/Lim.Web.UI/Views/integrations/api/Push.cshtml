@{
    Layout = "_Layout.cshtml";
}
<body class="skin-blue">
    <div class="wrapper">
        @Html.Partial("_Header.cshtml")
        @Html.Partial("_Sidebar.cshtml")

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    LIM
                    <small>API Push</small>
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="box box-warning">
                        <div class="box-header">
                            <h3 class="box-title">Push Configuration</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body" ng-app="clientApp">
                            <form role="form" ng-controller="clientController">
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" />
                                            Is Active
                                        </label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Client</label>
                                    <input type="text" class="form-control" placeholder="Select Client ..." />
                                </div>

                                <!-- text input -->
                                  
                                <div class="form-group">
                                    <label>Packages / Products</label>
                                    <input type="text" class="form-control" placeholder="Select Packages ..." />
                                </div>
                                <div class="form-group">
                                    <label>Base Address</label>
                                    <input type="text" class="form-control" placeholder="http:// ..." />
                                </div>
                                <div class="form-group">
                                    <label>Suffix</label>
                                    <input type="text" class="form-control" placeholder="..." />
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" />
                                            Has Authentication
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Authentication Types</label>
                                    <select class="form-control">
                                        <option selected>None</option>
                                        <option>Stateless Authentication</option>
                                        <option>Basic Authentication</option>
                                    </select>
                                </div>
                                @*<div class="form-group">
                <div class="col-xs-3">
                    <label>Authentication Key</label>
                    <input type="text" class="form-control" placeholder="..." />
                </div>
                <div class="col-xs-9">
                    <label>Value</label>
                    <input type="text" class="form-control" placeholder="..." />
                </div>
            </div>*@
                                <div class="form-group">
                                    <label>Authentication Key</label>
                                    <input type="text" class="form-control" placeholder="..." />
                                </div>
                                <div class="form-group">
                                    <label>Authentication Key Value</label>
                                    <input type="text" class="form-control" placeholder="..." />
                                </div>
                                <div class="form-group">
                                    <label>Username</label>
                                    <input type="text" class="form-control" placeholder="..." />
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="text" class="form-control" placeholder="..." />
                                </div>
                                <div class="form-group">
                                    <label>Freuency</label>
                                    <select class="form-control">
                                        <option selected>Always On</option>
                                        <option>Daily</option>
                                        <option>Hourly</option>
                                        <option>Custom</option>
                                    </select>
                                </div>
                                @*<div class="form-group">
                <label>Custom Frequency</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-clock-o"></i>
                    </div>
                    <input type="text" class="form-control pull-right" id="frequencytime" />
                </div> /.input group
            </div>*@
                                <div class="bootstrap-timepicker">
                                    <div class="form-group">
                                        <label>Custom Frequency</label>
                                        <div class="input-group bootstrap-timepicker">
                                            <input id="frequencytime" type="text" class="form-control " />
                                            <div class="input-group-addon">
                                                <i class="fa fa-clock-o"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div><!-- /.box-body -->
                    </div>
                </div>
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
        @Html.Partial("_Footer.cshtml")
    </div>
    <script src="~/assets/jquery/jquery-1.10.2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/input-mask/jquery.inputmask.js" type="text/javascript"></script>
