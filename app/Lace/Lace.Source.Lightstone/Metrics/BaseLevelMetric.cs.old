using System.Collections.Generic;
using Lace.Request;
using Lace.Source.Lightstone.Models;

namespace Lace.Source.Lightstone.Metrics
{
    public class BaseRetrievalMetric : IHaveBaseRetrievalMetric
    {
        private readonly IEnumerable<Statistics> _statisticsData;
        private readonly MetricTypes[] _metrics;
        private readonly ILaceRequestCarInformation _request;

        public IEnumerable<Statistics> MetricStatistics { get; private set; }

        public BaseRetrievalMetric(MetricTypes[] metrics, ILaceRequestCarInformation request,
            IEnumerable<Statistics> statisticsData)
        {
            _metrics = metrics;
            _request = request;
            _statisticsData = statisticsData;
        }
    }
}
