@model IEnumerable<PackageBuilder.Web.Controllers.DataProviderFieldItemDto>
@{
    ViewBag.Title = "Index";
}

<h2>Data Poviders</h2>
<table class="table">
    <thead>
        <tr>
            <th>Field</th>
            <th>Type</th>
            <th>Label</th>
            <th>Definition</th>
            <th>Industries</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>@Html.TextBoxFor(x => item.Label)</td>
                <td>@Html.TextBoxFor(x => item.Definition)</td>
                <td>@Html.TextBoxFor(x => item.Industries)</td>
            </tr>
        }
    </tbody>
</table>

