<div class="login-box">
    <div class="login-logo">
        <a href="/login"><b>Login</b></a>
    </div><!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form action="/login" method="POST">
            <div class="form-group has-feedback">
                <input id="Username" type="text" class="form-control" name="Username" placeholder="Email" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" name="Password" placeholder="Password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            @if (ViewBag.Message.HasValue)
            {
                if (ViewBag.Message.Value.ToString().Equals("Password reset mail sent"))
                {
                    <div class="alert alert-success" role="alert">@ViewBag.Message.Value</div>
                }
                else
                {
                    if (!string.IsNullOrEmpty(ViewBag.Message.Value))
                    {
                        <div class="alert alert-danger" role="alert">@ViewBag.Message.Value</div>
                    }
                }
            }
            <div class="row">
                <div class="col-xs-8">
                    @*<div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                        </div>*@
                </div><!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div><!-- /.col -->
            </div>
        </form>

        <a id="forgot_password" href="#/forgotPassword/" onclick="addUsername(); return false;">I forgot my password</a><br>
        @*<a href="register.html" class="text-center">Register a new membership</a>*@

    </div><!-- /.login-box-body -->
</div><!-- /.login-box -->
<script>
    function addUsername() {
        var userName = $("#Username").val();
        if (!userName.length) {
            toastr["error"]("Error", "Please enter your username");
            return;
        }
        var href = $("#forgot_password").attr("href") + userName;
        window.location.href = href;
    }
</script>