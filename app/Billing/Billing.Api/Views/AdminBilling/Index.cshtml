            <div class="info-box-content">
                <span class="info-box-text">Invoice Template Layout</span>
                <br />
                <span class="info-box-text">
                    <button type="button" class="btn btn-primary btn-md">View</button>
                </span>
            </div>
        </div>
    </div>
</div>

<!-- ROW 2 -->
<div class="row">

    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-olive-active"><i class="fa fa-flag-o"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Pastel</span>
                <br />
                <span class="info-box-text">
                    <button type="button" class="btn btn-primary btn-md">Action</button>
                </span>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-yellow"><i class="fa fa-files-o"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Merchant</span>
                <br />
                <span class="info-box-text">
                    <button type="button" class="btn btn-primary btn-md">Action</button>
                </span>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-teal-gradient"><i class="fa fa-inbox"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Provider Notifications</span>
                <br />
                <span class="info-box-text">
                    <button type="button" class="btn btn-primary btn-md">View</button>
                </span>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-red"><i class="fa fa-gears"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Billing Run Notification Settings</span>
                <br />
                <span class="info-box-text">
                    <button type="button" class="btn btn-primary btn-md">View</button>
                </span>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Schedule Billing Run's</h4>
            </div>
            <div class="modal-body">

                <div class="container">
                    <div class="col-sm-6">
                        <div class="form-group">

                            <div class="row">
                                <div class="col-md-2">
                                    <label>Daily Run:</label>
                                </div>
                                <div class="col-md-3">
                                    <input id="dailyRunFlag" data-on-color="success" data-off-color="warning" type="checkbox" checked>
                                </div>
                                <div class="col-md-6">
                                    <div class='input-group date' id='dailyBillingRun'>
                                        <input id='dailyBillingRun-input' type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-time">
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <br />

                            <div class="row">
                                <div class="col-md-2">
                                    <label>Monthly Run:</label>
                                </div>
                                <div class="col-md-3">
                                    <input id="monthlyRunFlag" data-on-color="success" data-off-color="warning" type="checkbox" checked>
                                </div>
                                <div class="col-md-6">
                                    <div class='input-group date' id='monthlyBillingRun'>
                                        <input type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar">
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <script type="text/javascript">

                        $(function () {

                            later.date.localTime();

                            $('#monthlyRunFlag').bootstrapSwitch('state', true, true);

                            $('#monthlyBillingRun').datetimepicker({
                                format: 'DD [of each Month at] HH:mm'
                            });

                            $('#automated_run').click(function () {

                                $.get("http://dev.billing.scheduler.lightstone.com/Schedules/BillingRun/Schedule/Daily", function (response) {

                                    var schedule = later.parse.cron('' + response.data, false);
                                    var result = later.schedule(schedule).next(1);

                                    $('#dailyBillingRun').datetimepicker({
                                        format: 'HH:mm',
                                        defaultDate: moment(result)
                                    });

                                    if (response.data == '* * * * *') {
                                        $('#dailyRunFlag').bootstrapSwitch('state', false, true);
                                        return;
                                    }

                                    $('#dailyRunFlag').bootstrapSwitch('state', true, true);
                                });
                            });

                            $('#btn_submit').click(function () {

                                var time = $('#dailyBillingRun-input').val().split(":");
                                var dailySchedule = moment().hour(time[0]).minutes(time[1]).format('DD-MM-YYYY HH:mm');

                                $.post("http://dev.billing.scheduler.lightstone.com/Schedules/BillingRun/Schedule/Daily?daily_time=" + dailySchedule +
                                        "&disable_schedule=" + $('#dailyRunFlag').bootstrapSwitch('state'), function (response) {

                                });
                            });
                        });
                    </script>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btn_submit" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>